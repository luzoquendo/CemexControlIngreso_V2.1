@model IEnumerable<CemexControlIngreso_V2.Models.Descanso>

@{
    ViewBag.Title = "Descanso";
}

<h2>DESCANSO</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdConductor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdViaje)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdConductor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdViaje)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Consultar", "Details", new { id = item.Id }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id})
            </td>
        </tr>
    }

</table>
