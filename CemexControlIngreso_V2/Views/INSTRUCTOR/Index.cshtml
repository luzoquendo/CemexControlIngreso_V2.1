@model IEnumerable<CemexControlIngreso_V2.Models.INSTRUCTOR>

@{
    ViewBag.Title = "Instructor";
}

<h2>Instructor</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <p>
            @Html.ActionLink("Crear", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Celular1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Celular2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Celular1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Celular2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdInstructor }) |
                        @Html.ActionLink("Consultar", "Details", new { id = item.IdInstructor }) |
                        @Html.ActionLink("Borrar", "Delete", new { id = item.IdInstructor })
                    </td>
                </tr>
            }

        </table>
    </div>
}
