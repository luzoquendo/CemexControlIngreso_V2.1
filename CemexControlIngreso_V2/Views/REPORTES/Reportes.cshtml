                <span class="label bottom">@Html.ActionLink("Tiempos de descanso", "Index", "Corredor")</span>
            </div>
            <div class="btn-big orange">
                <i class="fa fa-book fa-2x"></i>
                <span class="label bottom">@Html.ActionLink("Viajes por conductor", "Index", "Instructor" )</span>
            </div>
            <div class="btn-small green last">
                <i class="fa fa-minus-square fa-2x"></i>
                <span class="label bottom">@Html.ActionLink("Consulta Checklist", "Index", "Placas")</span>
            </div>
        </div>
